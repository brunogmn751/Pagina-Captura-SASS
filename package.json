{
  "name": "projeto_sass",
  "version": "1.0.0",
  "description": "Projeto com SASS",
  "license": "ISC",
  "author": "B",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:sass": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:sass": "sass css/style.prefix.css css/style.css --style compressed",
    "clean:sass":"rimraf css/style.comp.css css/style.prefix.css",
    "build:sass": "npm-run-all compile:sass prefix:sass compress:sass clean:sass"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.1.2",
    "sass": "^1.94.0"
  }
}
